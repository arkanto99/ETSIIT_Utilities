<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ActivityComedor">

    <View
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/main_degradado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="sans-serif-black"
        android:text="Menú"
        android:textColor="@color/white"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:text="Del 15 al 19 de noviembre"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textActionBar"
        app:layout_constraintStart_toEndOf="@+id/textActionBar" />

    <ImageView
        android:id="@+id/box_lunes"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="48dp"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:srcCompat="@drawable/degradado1"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/lunes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Lunes"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/box_lunes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/box_lunes"
        app:layout_constraintTop_toTopOf="@+id/box_lunes" />

    <ImageView
        android:id="@+id/box_martes"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@+id/box_lunes"
        app:srcCompat="@drawable/degradado1"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/martes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Martes"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/box_martes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/box_lunes"
        app:layout_constraintTop_toBottomOf="@+id/box_lunes" />

    <ImageView
        android:id="@+id/box_miercoles"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@+id/box_martes"
        app:srcCompat="@drawable/degradado1"
        tools:layout_editor_absoluteX="-9dp" />

    <TextView
        android:id="@+id/miercoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Miércoles"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/box_miercoles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/box_lunes"
        app:layout_constraintTop_toBottomOf="@+id/box_martes" />

    <ImageView
        android:id="@+id/box_jueves"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@+id/box_miercoles"
