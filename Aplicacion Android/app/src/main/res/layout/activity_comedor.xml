        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/box_lunes"
        app:layout_constraintTop_toBottomOf="@+id/box_miercoles" />

    <ImageView
        android:id="@+id/box_viernes"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@+id/box_jueves"
        app:srcCompat="@drawable/degradado1"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
